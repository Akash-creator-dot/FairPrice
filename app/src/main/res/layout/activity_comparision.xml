<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Ride Image -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ride_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:repeatCount="-1"/>

    <!-- Ride Name -->
    <TextView
        android:id="@+id/ride_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ride Type"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:padding="8dp"/>

    <!-- Ride Description -->
    <TextView
        android:id="@+id/ride_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comfortable and affordable"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:paddingBottom="10dp"/>

    <!-- Agents Section (Ola, Uber, Rapido) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <!-- Ola -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_card">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ola"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/ola_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹120"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/ola_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETA: 5 mins"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/ola_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐ 4.5"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Uber -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_card">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/uber"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/uber_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹140"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/uber_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETA: 6 mins"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/uber_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐ 4.6"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Rapido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_card">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/rapido"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/rapido_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹90"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/rapido_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETA: 3 mins"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/rapido_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐ 4.3"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="20dp"/>
</LinearLayout>
