                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <!-- InDrive card-->
        <androidx.cardview.widget.CardView
            android:backgroundTint="#A9D1C533"
            android:layout_marginBottom="10dp"
            android:id="@+id/InDrive_card"
