                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <!-- Meru Cabs card-->
        <androidx.cardview.widget.CardView
            android:backgroundTint="#A9D1C533"
            android:layout_marginBottom="10dp"
            android:id="@+id/Meru_card"
            android:layout_width="match_parent"
